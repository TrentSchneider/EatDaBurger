<button id="reset" class="btn btn-info m-1">Reset</button>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 card mb-5 text-center bg-warning">
      <img src="/assets/img/burger.png" alt="Burger Image" />
      <h2 id="title" class="mt-2">Eat-Da-Burger</h2>
      <form id="createburger" class="button-size">
        <textarea
          class="col-6"
          type="text"
          id="bu"
          rows="3"
          maxlength="25"
        ></textarea>
        <br />
        <button class="btn btn-primary" type="submit">Submit</button>
        <p class="my-3">
          Enter a burger you want to eat and then click the "Submit" button.
        </p>
      </form>
    </div>
  </div>
  <div class="row d-flex justify-content-around">
    <div class="col-5">
      <h3 class="text-center">Untouched Burgers</h3>
      <ul id="undevoured" class="noDot noPad">
        {{#each burger}} {{#unless this.devoured}}
        <div class="input-group">
          <li class="bg-warning-light p-1 mb-1">
            <p class="text-nowrap blist">
              {{this.id}}. {{this.name}}
            </p>
          </li>
          <button
            class="devour btn btn-danger input-group-append mb-1"
            data-id="{{this.id}}"
            data-name="{{this.name}}"
          >
            Devour!
          </button>
        </div>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-5">
      <ul id="devoured" class="noDot noPad">
        <h3>Devoured Burgers</h3>
        {{#each burger}} {{#if this.devoured}}
        <li class="bg-warning-light p-1 mb-1">
          <p class="text-nowrap blist">
            {{this.id}}. {{this.name}}
          </p>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>
